generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url = "file:./dev.db"
}

model Article {
    id Int @id @default(autoincrement())
    title String
    content String
    thumbnail String?
    video String?
    createdAt DateTime @default(now())
    updatedAt DateTime? @updatedAt
    author String
}

model Event {
    id Int @id @default(autoincrement())
    thumbnail String
    title String
    description String
    startDate DateTime
    endDate DateTime?
    location String
    link String
    category String
    slug String
    ownerFirstName String?
    ownerLastName String?
    ownerEmail String?
}